<h2><%= @organization.name %></h2>
<%= link_to 'Edit Organization', edit_organization_path(@organization.id), class: "button tiny" %>
<%= link_to 'Destroy Organization', @organization, method: :delete, data: { confirm: 'Are you sure?' }, class: "button tiny" %>

<% if @organization.donations.count > 0 %>
  <% @organization.donations.each do |donation| %>
    <ul>
    <% unless donation.donor == nil %>
      <li>$<%= donation.amount %> on <%= donation.date.strftime("%m/%d/%Y") %> by <%= link_to donation.donor.name, donor_path(donation.donor.id) %> | <%= link_to 'Edit', edit_donation_path(donation.id) %> | <%= link_to 'Destroy', donation, method: :delete, data: { confirm: 'Are you sure?' } %></li>
    <% end %>
    </ul>
  <% end %>
<% else %>
  <p>No donations to show.</p>
<% end %>

<%= link_to 'New Donation', new_donation_path(@donation), class: "button" %>

<%= link_to 'Back', organizations_path, class: "button" %>
